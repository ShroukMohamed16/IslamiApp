<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.sebha.SebhaFragment">

    <ImageView
        android:id="@+id/head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_sebha_logo"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@id/body_sebha"
        app:layout_constraintEnd_toEndOf="@+id/body_sebha"
        app:layout_constraintStart_toStartOf="@+id/body_sebha"
        app:layout_constraintTop_toTopOf="@id/body_sebha" />

    <ImageView
        android:id="@+id/body_sebha"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/body_sebha_logo"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="عدد التسبيحات"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/body_sebha"
        app:layout_constraintStart_toStartOf="@+id/body_sebha"
        app:layout_constraintTop_toBottomOf="@+id/body_sebha" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tsbeeh_count"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="30"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zekr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/tsbeeh_count"
        app:layout_constraintStart_toStartOf="@+id/tsbeeh_count"
        app:layout_constraintTop_toBottomOf="@+id/tsbeeh_count" />






</androidx.constraintlayout.widget.ConstraintLayout>